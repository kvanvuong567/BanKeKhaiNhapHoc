@model IEnumerable<BanKeKhaiNhapHoc.Models.DanhSachLop>
@{
    ViewData["Title"] = "Danh sách học viên trúng tuyển";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Thêm Google Fonts -->
<link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700&display=swap" rel="stylesheet">

<style>
    :root {
        --primary-color: #1abc9c;
        --primary-dark: #16a085;
        --btn-custom: #3498db;
        --btn-custom-hover: #2980b9;
        --table-header-bg: #2c3e50;
        --table-header-text: #ecf0f1;
        --table-hover: #f8f9fa;
        --badge-success-bg: #28a745;
        --badge-secondary-bg: #6c757d;
    }

    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f4f6f9;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 1200px;
        margin: auto;
        padding: 20px;
    }

    .card {
        border: none;
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 0 8px 16px rgba(0,0,0,0.1);
        animation: fadeIn 0.8s ease-in-out;
        background: #fff;
    }

    .card-header {
        background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
        color: var(--table-header-text);
        text-align: center;
        padding: 1.5rem 2rem;
        font-size: 1.75rem;
        font-weight: 600;
        border-bottom: 2px solid rgba(236, 240, 241, 0.3);
    }

    .btn-custom {
        background-color: var(--btn-custom);
        border: none;
        color: #fff;
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        font-weight: 500;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-custom:hover {
            background-color: var(--btn-custom-hover);
            transform: translateY(-2px);
        }

    .table-responsive {
        margin-top: 1rem;
    }

    .table thead {
        background-color: var(--table-header-bg);
        color: var(--table-header-text);
    }

        .table thead th {
            padding: 0.75rem;
            vertical-align: middle;
            border-bottom: 2px solid rgba(236, 240, 241, 0.3);
        }

    .table tbody td {
        vertical-align: middle;
        padding: 0.75rem;
    }

    .table tbody tr {
        transition: background-color 0.3s ease;
    }

        .table tbody tr:hover {
            background-color: var(--table-hover);
        }

    .badge {
        font-size: 0.9rem;
        padding: 0.5em 0.75em;
    }

    .badge-success {
        background-color: var(--badge-success-bg);
    }

    .badge-secondary {
        background-color: var(--badge-secondary-bg);
    }
</style>

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            DANH SÁCH HỌC VIÊN TRÚNG TUYỂN
        </div>
        <br />
        <div class="card-body">
            <div class="mb-3 text-right">
                <a href="@Url.Action("Create")" class="btn btn-custom">
                    <i class="fas fa-plus"></i> Thêm mới
                </a>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="text-center">ID</th>
                            <th class="text-center">Học viên</th>
                            <th class="text-center">Lớp học</th>
                            <th class="text-center">Khóa học</th>
                            <th class="text-center">Trạng thái</th>
                            <th class="text-center">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">@item.Id</td>
                                <td>@item.HocVien?.HoTen</td>
                                <td>@item.LopHoc?.TenLop</td>
                                <td>@item.LopHoc?.TenKhoaHoc</td>
                                <td class="text-center">
                                    @if (item.TrangThai == "Active")
                                    {
                                        <span class="badge badge-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">@item.TrangThai</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i> Sửa
                                    </a>
                                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i> Xóa
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
