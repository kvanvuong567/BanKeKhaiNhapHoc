@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Đăng nhập - VIP PRO Sáng</title>
    <link rel="stylesheet" href="~/ace/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/ace/assets/fontawesome/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            margin: 0;
        }

        .login-container {
            position: relative;
            max-width: 600px;
            width: 100%;
            padding: 40px;
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.5);
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            text-align: center;
            animation: fadeIn 1s ease-in-out;
        }

        .card-title {
            font-size: 2.25rem;
            font-weight: 600;
            color: #333;
            margin-bottom: 20px;
        }

        .form-control {
            background: rgba(255, 255, 255, 0.8);
            border: none;
            border-radius: 8px;
            padding: 16px;
            color: #333;
            transition: all 0.3s ease;
            margin-bottom: 20px;
        }

            .form-control::placeholder {
                color: #666;
            }

            .form-control:focus {
                outline: none;
                background: rgba(255, 255, 255, 1);
                box-shadow: 0 0 10px rgba(85, 99, 222, 0.25);
            }

        .btn-custom {
            background: linear-gradient(90deg, #89f7fe, #66a6ff);
            color: white;
            font-size: 1.3rem;
            font-weight: 600;
            padding: 14px;
            width: 100%;
            border-radius: 8px;
            border: none;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(102, 166, 255, 0.4);
            margin-top: 10px;
        }

            .btn-custom:hover {
                background: linear-gradient(90deg, #66a6ff, #89f7fe);
                transform: scale(1.05);
                box-shadow: 0 8px 20px rgba(102, 166, 255, 0.6);
            }

        .alert {
            font-size: 1rem;
            color: #fff;
            background: rgba(255, 0, 0, 0.5);
            border: none;
            margin-top: 15px;
            padding: 10px;
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h3 class="card-title">ĐĂNG NHẬP</h3>
        <form asp-action="Login" method="post">
            <div class="mb-3">
                <input type="text" name="username" id="username" class="form-control" placeholder="Tên đăng nhập" required />
            </div>
            <div class="mb-3">
                <input type="password" name="password" id="password" class="form-control" placeholder="Mật khẩu" required />
            </div>
            <button type="submit" class="btn btn-custom">Đăng nhập ngay</button>
        </form>
        @if (ViewBag.Error != null)
        {
            <div class="alert" role="alert">
                @ViewBag.Error
            </div>
        }
    </div>
    <script src="~/ace/assets/js/jquery.min.js"></script>
    <script src="~/ace/assets/js/bootstrap.bundle.min.js"></script>
</body>
</html>
