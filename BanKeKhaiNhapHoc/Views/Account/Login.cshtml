@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Đăng nhập - Hệ thống Bản Kê Khai Nhập Học</title>
    <link rel="stylesheet" href="~/ace/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/ace/assets/fontawesome/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>

        .full-height {
            min-height: 100vh;
        }

        .d-flex-center {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            background-color: #ffffff;
        }

            .login-card .card-body {
                padding: 3rem;
            }

            .login-card .card-title {
                font-size: 2rem;
                margin-bottom: 1.5rem;
                font-weight: 700;
                color: #333;
            }

        .form-control {
            border-radius: 5px;
            padding: 0.85rem;
            border: 1px solid #ced4da;
            box-shadow: none;
        }

            .form-control:focus {
                border-color: #80bdff;
                box-shadow: 0 0 0 0.2rem rgba(0,123,255,0.25);
            }

        .btn-custom {
            background-color: #007bff;
            border: none;
            font-size: 1.2rem;
            padding: 0.85rem;
            width: 100%;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .btn-custom:hover {
                background-color: #0056b3;
            }

        .alert {
            font-size: 1rem;
        }
    </style>
</head>
<body>
    <div class="container full-height d-flex-center">
        <div class="col-md-8 col-lg-6">
            <div class="card login-card">
                <div class="card-body">
                    <h3 class="card-title text-center">Đăng nhập</h3>
                    <form asp-action="Login" method="post">
                        <div class="mb-3">
                            <label for="username" class="form-label">Tên đăng nhập</label>
                            <input type="text" name="username" id="username" class="form-control" placeholder="Nhập tên đăng nhập" required />
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Mật khẩu</label>
                            <input type="password" name="password" id="password" class="form-control" placeholder="Nhập mật khẩu" required />
                        </div>
                        <button type="submit" class="btn btn-custom">Đăng nhập</button>
                    </form>
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger mt-3" role="alert">
                            @ViewBag.Error
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <script src="~/ace/assets/js/jquery.min.js"></script>
    <script src="~/ace/assets/js/bootstrap.bundle.min.js"></script>
</body>
</html>
