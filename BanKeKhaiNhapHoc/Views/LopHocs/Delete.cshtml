@model BanKeKhaiNhapHoc.Models.LopHoc

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Thêm Google Fonts -->
<link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700&display=swap" rel="stylesheet">

<style>
    :root {
        --danger-color: #dc3545;
        --danger-hover: #c82333;
        --light-bg: #f8f9fa;
    }

    body {
        font-family: 'Poppins', sans-serif;
        background: var(--light-bg);
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 600px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .card {
        border: none;
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        background: #fff;
        animation: fadeIn 0.8s ease-in-out;
    }

    .card-header {
        background: linear-gradient(135deg, var(--danger-color), var(--danger-hover));
        color: #fff;
        padding: 1.5rem 2rem;
        font-size: 1.5rem;
        font-weight: 600;
        text-align: center;
    }

    .card-body {
        padding: 2rem;
    }

    dl.row dt {
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    dl.row dd {
        margin-bottom: 1rem;
    }

    .btn {
        border-radius: 0.5rem;
        transition: all 0.3s ease;
    }

    .btn-danger:hover {
        background-color: var(--danger-hover);
        transform: translateY(-2px);
    }

    .btn-secondary {
        border-radius: 0.5rem;
        transition: all 0.3s ease;
        margin-left: 0.5rem;
    }

    .back-link {
        text-align: center;
        margin-top: 1rem;
    }
</style>

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            Confirm Delete
        </div>
        <div class="card-body">
            <h3 class="text-center">Are you sure you want to delete this?</h3>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.TenKhoaHoc)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.TenKhoaHoc)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.TenLop)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.TenLop)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.MoTaLop)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.MoTaLop)
                </dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="text-center">
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                </div>
            </form>
        </div>
    </div>
</div>
